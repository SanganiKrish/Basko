<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lonchAppLayout"
    android:background="@color/white"
    tools:context=".view.LonchAppActivity">

    <FrameLayout
        android:id="@+id/lonchAppScreenNativeSmallAd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/native_small_ad"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/nativeAdLonchActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lonchAppScreenNativeSmallAd">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lonchImage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/start_image1" />

            <ImageView
                android:id="@+id/lonchImage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/start_image2" />

            <ImageView
                android:id="@+id/lonchImage3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/start_image3" />

            <ImageView
                android:id="@+id/lonchImage4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/start_image4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/lonchImage5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_weight="1"
                android:src="@drawable/start_image3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/lonchScreenButton"
                android:layout_width="500dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="@color/button_color"
                android:fontFamily="sans-serif"
                android:text="LAUNCH APP"
                android:textColor="@color/white"
                android:textSize="@dimen/main_activity_button_text_size"
                android:textStyle="bold"
                app:cornerRadius="15dp"
                app:layout_constraintTop_toBottomOf="@+id/nativeAdStartActivity" />


            <ImageView
                android:id="@+id/lonchImage6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/start_image4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lonchImage7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/start_image5" />

            <ImageView
                android:id="@+id/lonchImage8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/start_image6" />

            <ImageView
                android:id="@+id/lonchImage9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/start_image7" />

            <ImageView
                android:id="@+id/lonchImage10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/start_image8" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/nativeAdLonchActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/native_ad_5"
        app:layout_constraintBottom_toTopOf="@+id/lonchScreenBannerSmallAd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />


    <FrameLayout
        android:id="@+id/lonchScreenBannerSmallAd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>